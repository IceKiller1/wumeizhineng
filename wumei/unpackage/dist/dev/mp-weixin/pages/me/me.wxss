
.context{
	width: 100%;
	font-size: 13px;
	background-color: #e4e5e7;
	color: #000000;
}
.in-one-line {
	display: flex;
	flex-direction: row;
}
.in-one-column {
	display: flex;
	flex-direction: column;
}
/* 个人信息 */
.people{
	width: 100%;
	padding: 60rpx 50rpx 40rpx;
	background-color: #4a4b84;
}
.face{
	width: 120rpx;
	border-radius: 10px;
}
.introduce{
	margin-left: 20rpx;
	margin-top: 30rpx;
	color: #FFFFFF;
}
.introduce-name{
	font-size: 15px;
	font-weight: 600;
}
/* 标签组 */
.label-set{
	background-color: #FFFFFF;
	padding: 40rpx;
	margin-bottom: 40rpx;
}
.label-li{
	width: 25%;
	text-align: center;
	align-items: center;
}
.label-img{
	width: 80rpx;
	border-radius: 3px;
	margin-bottom: 10rpx;
}
/* 按钮列表 */
.button-set{
	background-color: #FFFFFF;
	margin-bottom: 40rpx;
}
.button-line{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	align-items: center;
	padding: 0 20rpx;
}
.button-img{
	width: 40rpx;
}
.button-text{
	margin-left: 20rpx;
	width: 80%;
	font-size: 15px;
}
.button-smh{
	text-align: right;
}
/* 退出账号 */
.outline{
	background-color: #FFFFFF;
	color: #bcbcbc;
	border: none;
	font-size: 15px;
	padding: 10rpx 0;
}

